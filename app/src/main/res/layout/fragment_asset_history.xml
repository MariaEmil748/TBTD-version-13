<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/read_fragment"
    android:background="#E3F3FF"

    >
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:layout_below="@+id/searching"
        android:scrollbars="vertical"
        android:id="@+id/historyrecycle"
        >

    </androidx.recyclerview.widget.RecyclerView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/radiogroup"
        android:layout_toRightOf="@+id/gethistory"
        android:textAlignment="center"
        android:id="@+id/searching"
        android:inputType="text"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:hint="Choose Search Method "
        android:paddingStart="10dp"
        >

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linerSearch"
        android:layout_below="@+id/serialNumberHand"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:id="@+id/totalTx"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Total Asset : "
            ></TextView>


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/totalCountS"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="0"
            android:visibility="gone"
            android:textStyle="bold"
            ></TextView>

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/radiogroup"
        android:orientation="horizontal"
        android:layout_below="@+id/linerSearch"
        android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/assetSearch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:text="Asset-Number"></RadioButton>

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Serial-Number"
                android:id="@+id/serialsearch"
                android:textSize="16sp"
                android:layout_height="50dp"></RadioButton>
        <RadioButton
            android:id="@+id/RoomSearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:text="Room-Number"></RadioButton>


        <RadioButton
            android:layout_width="0dp"
            android:text="HR-Code"
            android:layout_weight="1"
            android:id="@+id/hrsearch"
            android:textSize="16sp"
            android:layout_height="50dp"></RadioButton>


    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gethistory"
        android:layout_below="@+id/radiogroup"
        android:layout_marginLeft="5dp"
        android:textAllCaps="false"
        android:text="Get Assets"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:background="@drawable/register_button"
        tools:ignore="NotSibling">

    </Button>

</RelativeLayout>

