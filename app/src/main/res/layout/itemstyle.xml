<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:id="@+id/cardd"
    android:background="@color/colorAccent"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:padding="8dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linerstyle"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/serialitem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="serialNumber">

            </TextView>



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textAlignment="textEnd"
                android:text="Emp Name"
                android:layout_alignParentRight="true"
                android:textSize="12dp"
                android:id="@+id/employeename"
                android:textColor="@color/dark"
                >

            </TextView>


        </LinearLayout>








        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linerstyle"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="descrption"
                android:id="@+id/descite"
                android:maxLines="2"
                android:textColor="@color/dark"
                android:layout_below="@+id/serialitem"
                >

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="Hr"
                android:textAlignment="textEnd"
                android:layout_alignParentRight="true"
                android:id="@+id/employeehr"
                android:textSize="12dp"
                android:layout_below="@+id/employeename"
                android:textColor="@color/dark"
                >

            </TextView>

        </LinearLayout>







    </RelativeLayout>

</androidx.cardview.widget.CardView>